<div class="mt-5 pt-5">
  <h1 style="margin: 20px;">Listing <span style="background-color: #0E5ED7; border-radius: 20px; padding: 5px; color: #fff;">Articles</span></h1>
</div>
<div class="container card1">

  <% @articles.each do |article| %>


      <div class="mt-5" style="width: 30rem;">
        <img src="<%= article.image %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h3 style="margin-top: 10px;"><span style="background-color: #0E5ED7; color: #fff; padding: 3px;"><%= article.title %></span></h3>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%= article.types %></li>
          <li class="list-group-item"><%= article.sexe %></li>
          <li class="list-group-item"><%= article.size %></li>
          <li class="list-group-item"><%= article.color %></li>
          <li class="list-group-item"><%= article.brand %></li>
          <li class="list-group-item"><%= article.price %></li>
        </ul>
        <div class="card-body">
          <span><%= link_to 'Show', article %></span>
          <% if (article.price == 210) %>
            <p><%= link_to 'Edit', edit_article_path(article) %></p>
          <% else %>
            <%= %>
          <% end %>
          <span><%= link_to "Destroy", article_path(article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></td>
        </div>
      </div>
  <% end %>
</div>
<div class="container mb-5">
  <%= link_to 'Ajouter un article', new_article_path, class: "btn btn-primary" %>
</div>
