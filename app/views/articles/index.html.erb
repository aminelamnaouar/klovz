<div class="container">
  <h1>Listing Articles</h1>
  <table class="table">
    <%# <thead>
      <tr>
        <th>Title</th>
        <th>Text</th>
        <th colspan="3"></th>
      </tr>
    </thead> %>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.types %></td>
          <td><%= article.sexe %></td>
          <td><%= article.size %></td>
          <td><%= article.color %></td>
          <td><%= article.brand %></td>
          <td><%= article.price %></td>
          <td><%= link_to 'Show', article %></td>
          <td><%= link_to 'Edit', edit_article_path(article) %></td>
          <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Article', new_article_path, class: "btn btn-primary" %>
</div>
